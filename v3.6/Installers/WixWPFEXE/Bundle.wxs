<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
		 xmlns:util="http://schemas.microsoft.com/wix/UtilExtension" >
	<?define LibsDir="..\..\Shared\Libs\" ?>
	<Bundle Name="WixWPF v3.6" Version="3.6.0.0" Manufacturer="Troy Palacino" UpgradeCode="{74AD0976-D657-47B3-84F6-B1A95835F8BC}"
					IconSourceFile="..\..\..\Images\Logo.ico" HelpUrl="http://wixwpf.codeplex.com">

		<BootstrapperApplicationRef Id="ManagedBootstrapperApplicationHost" >
			<Payload SourceFile="BootstrapperCore.config" />
			<Payload SourceFile="$(var.LibsDir)WixWPF.dll" />
			<Payload SourceFile="$(var.LibsDir)WixWPF.pdb" />
			<Payload SourceFile="$(var.WixWPFUI.TargetPath)" />
		</BootstrapperApplicationRef>

		<Variable Name="HasWix36" />
		<util:RegistrySearch Root="HKLM" Key="SOFTWARE\Microsoft\Windows Installer XML\3.6" Variable="HasWix36" Result="exists" />

		<Chain>
			<PackageGroupRef Id="NetFx40Web"/>
			<MsiPackage Id="WixWPFMSI" SourceFile="$(var.WixWPFMSI.TargetPath)" />
		</Chain>

	</Bundle>
</Wix>